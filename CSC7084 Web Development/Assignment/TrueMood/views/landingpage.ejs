<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('csslinks') %>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
      integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <title>TrueMood</title>
  </head>
  <body class="landing-background">
    <main class="landing-main">
      <div class="landing-container">
        <div class="landing-truemood-logo">TrueMood</div>
        <div id="login-box">
          <form action="/login" method="post">
            <label for="email">Email <span id="emsg"></span></label>
            <input type="text" id="email" name="email" />

            <label for="userpass">Password</label>
            <input type="password" id="userpass" name="userpass" />

            <button id="landing-submit" type="submit">Submit</button>
            <a href="/signup"
              ><button class="button-black" type="button">Sign Up</button></a
            >
          </form>
          <% if (error) { %>
            <script>
              const msg = '<%= error %>';
              $('#emsg').html('Please enter a valid email address')
              .css('color', 'crimson').css('background-color', 'white').css('margin-left', '5%')
              .show();
            </script>
          <% } %>
          <script>
                $("form").submit((event)=> {
      const emailRegex = /(?:[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*|"(?:[\x01-\x08\x0b\x0c\x0e-\x1f\x21\x23-\x5b\x5d-\x7f]|\\[\x01-\x09\x0b\x0c\x0e-\x7f])*")@(?:(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?|\[(?:(?:(2(5[0-5]|[0-4][0-9])|1[0-9][0-9]|[1-9]?[0-9]))\.){3}(?:(2(5[0-5]|[0-4][0-9])|1[0-9][0-9]|[1-9]?[0-9])|[a-z0-9-]*[a-z0-9]:(?:[\x01-\x08\x0b\x0c\x0e-\x1f\x21-\x5a\x53-\x7f]|\\[\x01-\x09\x0b\x0c\x0e-\x7f])+)\])/;
      let currentEmail = $('#email').val();
      if (emailRegex.test(currentEmail) == false) {
        $('#emsg').html('Please enter a valid email address')
        .css('color', 'crimson').css('background-color', 'white').css('margin-left', '5%')
        .show();
        //event.preventDefault();
      }
    })
          </script>
        </div>
        <div id="quotebox">
          <p id="quote">"<%= data[0].q %>"</p>
          <p><%= data[0].a %></p>
        </div>
      </div>
    </main>
  </body>
</html>
