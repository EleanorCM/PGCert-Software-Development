<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('csslinks') %>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
      integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <title>Create an account</title>
</head>
<body class="landing-background">
    <main class="landing-main">
    <p class="landing-truemood-logo">TrueMood</p>
    <div class="landing-container">
    <h1>Create an account</h1>
    <form action="/signup" method="post">
        <label for="newuserfirstname">First name <span id="fnmessage"></span></label>
        <input type="text" name="newuserfirstname" id="newuserfirstname">

        <label for="newuserlastname">Last name <span id="lnmessage"></span></label>
        <input type="text" name="newuserlastname" id="newuserlastname">

        <label for="newuseremail">Email address <span id="emsg"></span></label>
        <input type="text" name="newuseremail" id="newuseremail">

        <label for="newuserpassword">Choose a password</label>
        <input type="password" name="newuserpassword" id="newuserpassword">

        <button id="signup-submit" type="submit">Submit</button>
    </form>
</div>
</main>
<script>
    $("form").submit((event)=> {
      const emailRegex = /(?:[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*|"(?:[\x01-\x08\x0b\x0c\x0e-\x1f\x21\x23-\x5b\x5d-\x7f]|\\[\x01-\x09\x0b\x0c\x0e-\x7f])*")@(?:(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?|\[(?:(?:(2(5[0-5]|[0-4][0-9])|1[0-9][0-9]|[1-9]?[0-9]))\.){3}(?:(2(5[0-5]|[0-4][0-9])|1[0-9][0-9]|[1-9]?[0-9])|[a-z0-9-]*[a-z0-9]:(?:[\x01-\x08\x0b\x0c\x0e-\x1f\x21-\x5a\x53-\x7f]|\\[\x01-\x09\x0b\x0c\x0e-\x7f])+)\])/;
      let currentEmail = $('#newuseremail').val();
      if (emailRegex.test(currentEmail) == false) {
        $('#emsg').html('Please enter a valid email address')
        .css('color', 'crimson').css('background-color', 'white').css('margin-left', '5%')
        .show();
        event.preventDefault();
      }
    })

    $("form").submit((event)=> {
        const nameRegex = /^[a-zA-Z]{1,20}$/;
        let firstname = $('#newuserfirstname').val();
        if (nameRegex.test(firstname) == false) {
        $('#fnmessage').html('Name must be alphabetic and must not exceed 20 characters')
        .css('color', 'crimson').css('background-color', 'white').css('margin-left', '5%')
        .show();
        event.preventDefault();
      }
    })

    $("form").submit((event)=> {
        const nameRegex = /^[a-zA-Z]{1,20}$/;
        let lastname = $('#newuserlastname').val();
        if (nameRegex.test(lastname) == false) {
        $('#lnmessage').html('Name must be alphabetic and must not exceed 20 characters')
        .css('color', 'crimson').css('background-color', 'white').css('margin-left', '5%')
        .show();
        event.preventDefault();
      }
    })
  </script>
</body>
</html>